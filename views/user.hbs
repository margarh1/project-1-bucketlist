<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Bucketlist</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="../styles/styles.css">

    <!-- VENDOR SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

    <!-- APPLICATION SCRIPTS -->
    <script src="../scripts/user.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Bucket List</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">

            <button type="submit" class="btn btn-success to-homepage">Home</button>
            <button type="submit" class="btn btn-success">Sign out</button>
            <div class="form-group">
              <input type="text" placeholder="Search" class="form-control">
            </div>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
      <!-- PROFILE ASIDE  -->
    <div class="aside-container col-md-4 col-xs-12">
      <aside class="profile">
        <img src="../img/user_profile_img.png"  class="profile-picture img-circle img-responsive ">
        <button type="submit" class="btn btn-success">Friends</button>
      </aside>
    </div>
      <!-- wishList Beggining -->
    <div class="jumbotron">
      <button type="submit" class="btn btn-success add-wish">+Add</button>
      <button type="submit" class="btn btn-success">Sort</button>
      <div class="container" id="wishes" data-user-id='{{user.username}}' >
      <!-- new wish form -->
      <form id="add-new-wish" class="col-md-6 col-xs-12">
        <label for='name'>Wish Name:</label>
        <input type="text" name="name" required="true" />
        <label for="type">What kind of wish is this?</label>
        <input type="radio" name="type" value="person" required="true" />Someone you want to see or meet
        <input type="radio" name="type" value="place" />Somewhere you want to go
        <input type="radio" name="type" value="thing" />Something you want to get
        <label for="price">How much is it?</label>
        <input type="text" name="price" />
        <label for="location">Where is it?</label>
        <input type="text" name="location"/>
        <label for="dateToVisit">When are you planning to go?</label>
        <input type="text" name="dateToVisit"/>
        <label for="websiteLink">Where can you find it on the Internet?</label>
        <input type="text" name="websiteLink"/>
        <label for="description">Describe it:</label>
        <textarea name="description"></textarea>
        <label for="tags">Add some tags:</label>
        <input type="text" name="tags"/>
        <label for="status">Status?</label>
        <input type="text" name="status"/>
        <button type="submit">Add New Wish</button>
        <button type="button" class="cancel-button">Cancel</button>
      </form>
      <!-- end new wish form -->
        <script id="wish-template" type="text/x-handlebars-template">
          <div class="row wish \{{type}}" data-wish-id='\{{_id}}'>
            <div class="col-md-8 col-md-offset-1">
              <div class="panel panel-default">
                <div class="panel-body">
                  <!-- begin wish internal row -->

                  <!-- Wish Image -->
                  <div class='row'>
                    <div class="col-md-1 col-xs-12 thumbnail wish-art">
                      <img src="\{{imgUrl}}" alt="wish-image">
                    </div>

                    <!-- Wish Item -->
                    <div class="col-md-4 col-xs-12">
                      <ul class="list-group">
                        <li class="list-group-item">
                          <h4 class='inline-header'>Name:</h4>
                          <span class='wish-name'>\{{name}}</span>
                        </li>
                        <!-- <li class="list-group-item">
                          <h4 class='inline-header'>Type:</h4>
                          <span class='wish-type'>\{{type}}</span>
                        </li> -->
                        <li class="list-group-item">
                          <h4 class='inline-header'>Price:</h4>
                          <span class='wish-price'>\{{price}}</span>
                        </li>
                        <li class="list-group-item">
                          <h4 class='inline-header'>Location:</h4>
                          <span class='wish-location'>\{{location}}</span>
                        </li>
                        <li class="list-group-item">
                          <h4 class='inline-header'>Date to visit:</h4>
                          <span class='wish-date'>\{{dateToVisit}}</span>
                        </li>
                        <!-- <li class="list-group-item">
                          <h4 class='inline-header'>Website:</h4>
                          <span class='wish-website'>\{{websiteLink}}</span>
                        </li> -->
                     </div>
                     <div class="col-md-4 col-xs-12">
                        <li class="list-group-item">
                          <h4 class='inline-header'>Description:</h4>
                          <span class='wish-description'>\{{description}}</span>
                        </li>
                        <li class="list-group-item">
                          <h4 class='inline-header'>Tags:</h4>
                          <span class='wish-tags'>\{{tags}}</span>
                        </li>
                        <li class="list-group-item">
                          <h4 class='inline-header'>Status:</h4>
                          <span class='wish-status'>\{{status}}</span>
                        </li>

                        <li class="list-group-item">
                          <h4 class="wish-contact">Contact Info:</h4>
                          <span class="wish-contact"><p>Phone number: \{{contactInfo.phoneNumber}};</p>
                          <p>Address: \{{contactInfo.address}};</p>
                          <p>Email: \{{contactInfo.email}}</p></span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <!-- end of wishlist internal row -->
                  <div class="edit-buttons">
                    <a href="\{{websiteLink}}"><button type="submit" class="btn btn-success link-button">Link to Website</button></a>
                    <button type="submit" class="btn btn-warning delete-button">Delete</button>
                    <button type="submit" class="btn btn-success edit-button">Edit</button>
                    <button type="submit" class="btn btn-success share-button">Share</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </script>
      </div>
    </div>

    <div class="container">
      <footer>
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
